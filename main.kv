#:kivy 2.2.1

<InputForm>:
	BoxLayout:
		orientation: 'vertical'
		size: root.width / 4 * 3, root.height / 6 * 5
		center_x: root.center_x
		Label:
			font_size: 70
			text: "[入力フォーム]"
		Label:
			font_size: 70
			text: "日付"
		TextInput:
			id: input_date
			font_size: 70
			multiline: False
		Label:
			font_size: 70
			text: "内容"
		TextInput:
			id: input_content
			font_size: 70
			multiline: False
		Label:
			font_size: 70
			text: "金額"
		TextInput:
			id: input_money
			font_size: 70
			multiline: False
		Button:
			text: "登録"
			font_size: 70
			color: 0,1,1,1
			on_press: root.expense_register()




<Expense>:
	Button:
        size: 150,75
        pos: 0,root.top - self.height
        text: "入力"
        font_size: 40
        color: 0,1,0,1
	Button:
        size: 150,75
        pos: 150,root.top - self.height
        text: "表示"
        font_size: 40
        color: 0,1,0,1
	Button:
        size: 150,75
        pos: root.width - self.width,root.top - self.height
        text: "終了"
        font_size: 40
        color: 1,0,0,1
	InputForm:
		size: root.width,root.height