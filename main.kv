#:kivy 2.2.1

<InputForm>:
	BoxLayout:
		orientation: 'vertical'
		size: root.width, root.height / 6 * 5
		center_x: root.center_x
		BoxLayout:
			orientation: 'horizontal'
			Button:
				size: 150,75
				pos: 0,root.top - self.height
				text: "入力"
				font_size: 40
				color: 0,1,0,1
			Button:
				size: 150,75
				pos: 150,root.top - self.height
				text: "表示"
				font_size: 40
				color: 0,1,0,1
				on_press: root.manager.current = 'output'
			Button:
				size: 150,75
				pos: root.width - self.width,root.top - self.height
				text: "終了"
				font_size: 40
				color: 1,0,0,1
		Label:
			font_size: 60
			text: "[入力フォーム]"
		Label:
			font_size: 60
			text: "日付"
		TextInput:
			id: input_date
			font_size: 60
			multiline: False
		Label:
			font_size: 60
			text: "種別"
		Spinner:
			id: input_item_code
			text: "食費"
			values: "食費", "交通費", "書籍代", "娯楽費", "収入", "その他"
			font_size: 60
		Label:
			font_size: 60
			text: "内容"
		TextInput:
			id: input_content
			font_size: 60
			multiline: False
		Label:
			font_size: 60
			text: "金額"
		TextInput:
			id: input_money
			font_size: 60
			multiline: False
		Button:
			text: "登録"
			font_size: 60
			color: 0,1,1,1
			on_press: root.expense_register()



<DataTable>:
	viewclass: 'Label'
	size: root.width, root.height
	data: []
	RecycleGridLayout:
		cols: 4
		font_size: 60
		default_size: None, dp(40)
		default_size_hint: 1, None
		size_hint_y: None
		height: self.minimum_height if self.minimum_height > 0 else dp(40)  # データがない場合は 40 に設定
		canvas.before:
			Color:
				rgba: 1, 1, 1, 1  # 枠線の色を指定します
			Line:
				width: 1  # 枠線の太さを指定します
				rectangle: self.x, self.y, self.width, self.height

<OutputForm>:
	BoxLayout:
		orientation: 'horizontal'
		size: root.width, 75  # 例として適切な幅を設定
		top: root.top
		Button:
			size_hint_y: None
			size: 150, 75
			pos: 0, root.top - self.height
			text: "入力"
			font_size: 40
			color: 0, 1, 0, 1
			on_press: root.manager.current = 'input'
		Button:
			size_hint_y: None
			size: 150, 75
			pos: 150, root.top - self.height
			text: "表示"
			font_size: 40
			color: 0, 1, 0, 1
		Button:
			size_hint_y: None
			size: 150, 75
			pos: root.width - self.width, root.top - self.height
			text: "終了"
			font_size: 40
			color: 1, 0, 0, 1

	FloatLayout:
		size_hint: None,None
		size: root.width, root.height / 6 * 5
		center_x: root.center_x
		Label:
			text: "[表示画面]"
			font_size: 60
			size_hint: None,None
			center_x: root.center_x
			top: root.top - root.height / 8
		BoxLayout:
			orientation: "horizontal"
			size_hint: None,None
			size_x: root.width
			size_y: root.height / 8
			pos_hint: {'x': 0.2, 'top': 0.9}
			spacing: 10
			Label:
				size_hint: None,None
				text: "期間"
				font_size: 60
				pos_hint: {'center_x': 0.5, 'center_y': 0.5}
			TextInput:
				id: output_start
				size_hint: None,None
				size: 250,60
				font_size: 40
				pos_hint: {'center_x': 0.5, 'center_y': 0.5}
				multiline: False
			Label:
				size_hint: None,None
				text: "～"
				font_size: 60
				pos_hint: {'center_x': 0.5, 'center_y': 0.5}
			TextInput:
				id: output_end
				size_hint: None,None
				size: 250,60
				font_size: 40
				pos_hint: {'center_x': 0.5, 'center_y': 0.5}
				multiline: False
		Button:
			size_hint: None,None
			size: 150, 60
			pos_hint: {'center_x': 0.5, 'top': 0.75}
			text: "表示"
			font_size: 60
			on_press:
				app.dataTable_instance.get_data_from_database(start=root.ids.output_start.text, end=root.ids.output_end.text)
				root.ids.data_table.data = app.dataTable_instance.data
		DataTable:
			id: data_table
			pos_hint: {'center_x': 0.5, "top": 0.65}
			size_hint: 1, 0.7
			font_size: 60




